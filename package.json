  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf public/dist",
    "prebuild": "npm run clean",
    "build": "tsc && cp -r public/dist/* public/",
    "build:watch": "tsc -w",
    "prestart": "npm run build",
    "start": "http-server public -p 3000",
    "dev": "concurrently \"npm run build:watch\" \"http-server public -p 3000\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/dist/"
    ]
  },
  "keywords": [
    "youtube",
    "jukebox",
    "kiosk"
  ],
