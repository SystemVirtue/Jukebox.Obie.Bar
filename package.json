{
  "name": "youtube-jukebox-x1",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc && vite build",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "dev": "vite",
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then chmod +x ./render-start.sh && ./render-start.sh; else vite preview; fi",
    "test": "jest",
    "test:watch": "jest --watch",
    "render-build": "tsc --noEmit && vite build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/dist/"
    ]
  },
  "keywords": [
    "youtube",
    "jukebox",
    "kiosk"
  ],
  "author": "",
  "license": "ISC",
  "description": "YouTube Jukebox OBIE/X1 - Commercial-grade touchscreen music video jukebox",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "youtube-player": "^5.5.2",
    "serve": "^14.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/w3c-web-serial": "^1.0.8",
    "@types/youtube": "^0.1.1",
    "@vitejs/plugin-basic-ssl": "^2.0.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
